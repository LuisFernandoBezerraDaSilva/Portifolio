
generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id       String    @id @default(uuid()) @db.Uuid
  username String    @unique
  password String
  sessions Session[] 
  tasks    Task[]
}

model Session {
  id         String   @id @default(uuid()) @db.Uuid
  userId     String   @db.Uuid
  user       User     @relation(fields: [userId], references: [id])
  token      String   @unique 
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  ip         String?  
  userAgent  String?
  isValid    Boolean
}

model Task {
  id          String @id @default(uuid()) @db.Uuid
  title       String
  description String
  date        String
  userId      String  @db.Uuid
  user        User    @relation(fields: [userId], references: [id])
}